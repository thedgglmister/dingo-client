<?xml version='1.0' encoding='utf-8'?>
<widget id="com.digglemister.dingo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dingo</name>
    <description>
        A dingo test.
    </description>
    <author email="benjamin.iremonger@gmail.com" href="http://digglemister.com">
        The digglemister
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>your usage message</string>
    </edit-config>
    <plugin name="cordova-plugin-file-transfer" spec="^1.7.1" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-native-spinner" spec="^1.1.3" />
    <engine name="ios" spec="^4.5.4" />
</widget>
